<UserControl x:Class="Verse3.Elements.ToggleElementModelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:Verse3.Elements" 
             xmlns:nodes="clr-namespace:Verse3.Nodes" 
             d:DataContext="{d:DesignInstance Type=local:ToggleElement}"
             mc:Ignorable="d" 
             d:DesignHeight="50"
             d:DesignWidth="120"
             MouseDown="OnMouseDown"
             MouseMove="OnMouseMove"
             MouseUp="OnMouseUp"
             MouseWheel="OnMouseWheel"
             DataContextChanged="OnDataContextChanged"
             Loaded="OnLoaded"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDark.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid
        Width="{Binding BoundingBox.Size.Width}"
        Height="{Binding BoundingBox.Size.Height}"
        MinWidth="100"
        MinHeight="50"
        MaxHeight="50"
        >
        <ToggleButton
            Content="{Binding DisplayedText}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            FontFamily="Maven Pro"
            Margin="10"
            Background="#ff6700"
            Foreground="White"
            Checked="ToggleButton_Checked"
            Unchecked="ToggleButton_Unchecked"
            Cursor="Hand"
            IsChecked="{Binding Value, Mode=TwoWay}"
            />
    </Grid>
</UserControl>
